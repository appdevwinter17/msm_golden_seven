  <input type="text" id="Caption" name="the_title">
  <div>
  <label for="DOB">Year:</label>
  <input type="text" id="DOB" name="the_year">
  <div>
  <label for="Bio">Description:</label>
  <input type="text" id="Bio" name="the_description">
  <div>
