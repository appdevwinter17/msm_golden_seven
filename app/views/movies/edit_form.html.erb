<h1>Edit form</h1>

<form action="http://localhost:3000/update_movie/<%= @movie.id %>">
  <label for="Caption">Title:</label>
  <input type="text" id="Caption" name="the_title" value="<%= @movie.title %>">
  <div>
  <label for="DOB">Date:</label>
  <input type="text" id="DOB" name="the_new_dob" value="<%= @movie.year %>">
  <div>
  <label for="Duration">Duration:</label>
  <input type="text" id="Duration" name="the_new_duration" value="<%= @movie.duration %>">
  <div>
  <label for="Bio">Description:</label>
  <input type="text" id="Bio" name="the_new_description" value="<%= @movie.description %>">
  <div>
  <label for="Image URL">Image URL:</label>
  <input type="text" id="Image URL" name="the_new_image_url" value="<%= @movie.image_url %>">
  <button>Update Movie</button>
</form>
