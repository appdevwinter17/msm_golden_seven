<h1>Edit form</h1>

<form action="http://localhost:3000/update_actor/<%= @actor.id %>">
  <label for="Caption">Name:</label>
  <input type="text" id="Caption" name="the_new_name" value="<%= @actor.name %>">
  <div>
  <label for="DOB">DOB:</label>
  <input type="text" id="DOB" name="the_new_dob" value="<%= @actor.dob %>">
  <div>
  <label for="Bio">Bio:</label>
  <input type="text" id="Bio" name="the_new_bio" value="<%= @actor.bio %>">
  <div>
  <label for="Image URL">Image URL:</label>
  <input type="text" id="Image URL" name="the_new_image_url" value="<%= @actor.image_url %>">
  <button>Update Actor</button>
</form>
